@model NFL.Models.Stadium
@{
    ViewData["Title"] = "Details";
}

<input class="required_data" type="hidden" id="URL" name="URL"
       value="/Stadiums/Update/@Model.Id" />
<form>
    <div class="container ForProfile">
        <h3>Details</h3>
        <hr />

        <dl class="dl-horizontal">
            @*Stadium Names STARTS*@
            <dt>
                @Html.DisplayNameFor(st => st.Names) :
            </dt>
            <dd>

                <div class="entry">
                    @Html.DisplayFor(st => st.Names)
                </div>
                <div class="edit_field" style="display:none">
                    @Html.HiddenFor(st => st.Id)
                    <div class="row">
                        <div class="col-md-4">
                            @Html.EditorFor(st => st.Names, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="col-md-8">
                            @Html.ValidationMessageFor(st => st.Names, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

            </dd>
            @*Stadium Names ENDS*@


            @*Date Established STARTS*@
            <dt>
                @Html.DisplayNameFor(st => st.DateEstablished) :
            </dt>
            <dd>


                <div class="entry">
                    @Html.DisplayFor(st => st.DateEstablished)
                </div>
                <div class="edit_field" style="display:none">
                    <div class="row">
                        <div class="col-md-4">
                            @Html.EditorFor(st => st.DateEstablished, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="col-md-8">
                            @Html.ValidationMessageFor(st => st.DateEstablished, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </dd>
            @*Date Established ENDS*@

            @*Displaying Capacity STARTS*@
            <dt>
                @Html.DisplayNameFor(st => st.Capacity) :
            </dt>
            <dd>

                <div class="entry">
                    @Html.DisplayFor(st => st.Capacity)
                </div>
                <div class="edit_field" style="display:none">

                    <div class="row">
                        <div class="col-md-4">
                            @Html.EditorFor(st => st.Capacity, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                        </div>
                        <div class="col-md-8">
                            @Html.ValidationMessageFor(st => st.Capacity, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </dd>
            @*Displaying City ENDS*@

            @*Displaying Address STARTS*@

            @Html.Partial("Details/Address", Model.Address)
            @*Displaying Address ENDS*@




            <input class="required_data" type="hidden" id="originalLabels" name="originalLabels"
                   value="" />

            <input class="required_data" type="hidden" id="replacementLabels" name="replacementLabels"
                   value="Name : ,Date Established :  ,Capacity :  ,Street :  ,Zip Code :,City :  ,State : " />

           
        </dl>
        @Html.Partial("../Edit/Buttons")
    </div>
</form>


@section Scripts {
    <script src="~/Scripts/AutoPupolates.js"></script>
    <script src="~/Scripts/Edit.js"></script>
   

}
